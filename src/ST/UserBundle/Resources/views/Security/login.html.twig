{% extends 'STUserBundle::base.html.twig' %}
{% block body %}
<div class="panel-heading">
<h3>Login!</h3>
</div>
<div class="panel-body">
{% if error %}
	<div class="alert alert-danger">
		{{ error.messageKey|trans(error.messageData, 'security') }}
	</div>
{% endif %}
{{ form_start(form) }}
	{{ form_widget(form.username, {'attr': {'style': 'margin: 10px 0px 10px 0px'} }) }}
	{{ form_widget(form.password, {'attr': {'style': 'margin: 10px 0px 10px 0px'} }) }}
	<button type="submit" class="btn btn-default">Login <span class="fa fa-lock"></span></button>
	&nbsp;
	<a href="{{ path('st_register') }}">Register</a>
{{ form_end(form) }}
</div>
{% endblock %}
