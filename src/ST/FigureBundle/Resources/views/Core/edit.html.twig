{% extends "STFigureBundle::layout.html.twig" %}

{% block figures %}
<section id="myFigure">
        <div class="container">
			<h2 class="text-center">Edit a figure</h2>
			<hr>
            <div class="row">
				<div class="col-lg-10 col-lg-offset-1">
				{% autoescape %}
					{{ form_start(form) }}
						{{ form_row(form.name) }}
						{{ form_row(form.description) }}
						<label class="col-sm-2 control-label required">Catégorie</label>
						<div id="figure_typeFigure"data-prototype="&lt;div class=&quot;col-sm-12&quot;&gt;&lt;div id=&quot;figure_typeFigure___name__&quot; class=&quot;col-sm-10&quot;&gt;&lt;div class=&quot;form-group&quot;&gt;&lt;div class=&quot;col-sm-2&quot;&gt;&lt;/div&gt;&lt;div class=&quot;col-sm-10&quot;&gt;&lt;input type=&quot;text&quot; id=&quot;figure_typeFigure___name___name&quot; name=&quot;figure[typeFigure][__name__][name]&quot; required=&quot;required&quot; maxlength=&quot;255&quot; list=&quot;categories&quot; class=&quot;form-control&quot; /&gt;&lt;/div&gt;
&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;">
							{% for categorieFigure in form.typeFigure %}
								<div class="col-sm-12">
									{{ form_widget(categorieFigure, {'attr': {'class': 'col-sm-10'}}) }}
								</div>
							{% endfor %}
						</div>
					<div class="row"></div>
					<div class="text-right">
  						<a href="#" id="add_category">Ajouter une catégorie</a>
					</div>
					
					
						<div class="text-right">
							<ul class="pager">
								<li class="next">
									<a href="{{ path('st_home') }}">Cancel</a>
									<button type="submit" class="btnsave btn btn-default">Save</button>
								</li>
							</ul>
                        </div>
					{{ form_end(form) }}
					{% endautoescape %}
				</div>
			</div>
		</div>

	 <datalist id="categories">
		 {% for category in categories %}
		 <option value="{{ category.name }}">
		 {% endfor %}
	</datalist>
</section>
					
{% endblock %}